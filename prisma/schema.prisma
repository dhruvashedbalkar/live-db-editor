// This file is used by the Express backend (server.js) to connect to the database.

generator client {
provider = "prisma-client-js"
}

datasource db {
provider = "sqlite"
// The path to the SQLite database file
url      = "file:./dev.db"
}

// Example Table 1: User
model User {
id        Int      @id @default(autoincrement())
email     String   @unique
name      String?
createdAt DateTime @default(now())
}

// Example Table 2: Product
model Product {
id          Int      @id @default(autoincrement())
title       String
price       Float
isAvailable Boolean  @default(true)
updatedAt   DateTime @updatedAt
}

